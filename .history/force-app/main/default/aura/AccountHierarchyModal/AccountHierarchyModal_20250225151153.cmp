<aura:component implements="force:hasRecordId,flexipage:availableForRecordHome,force:hasSObjectName,force:lightningQuickAction" access="global">
    <!-- Attribute to receive the current recordId -->
    <aura:attribute name="recordId" type="Id" />
    
    <!-- Automatically call the openModal handler on component initialization -->
    <aura:handler name="init" value="{!this}" action="{!c.openModal}" />
    
    <!-- Include the overlay library -->
    <lightning:overlayLibrary aura:id="overlayLib"/>
    
    <!-- Add global styles for the modal -->
    <aura:html tag="style">
        /* Styles for the account hierarchy modal */
        .accountHierarchyModal .slds-modal__container {
            width: 90%;
            max-width: 90%;
            height: auto;
        }
        
        .accountHierarchyModal .slds-modal__content {
            height: 70vh;
            max-height: 70vh;
            overflow: hidden;
            padding: 0; /* Remove padding to let the LWC manage its own spacing */
        }
        
        /* Ensure modal fits better on different screens */
        @media (max-width: 768px) {
            .accountHierarchyModal .slds-modal__container {
                width: 95%;
                max-width: 95%;
            }
            
            .accountHierarchyModal .slds-modal__content {
                height: 60vh;
                max-height: 60vh;
            }
        }
    </aura:html>
</aura:component>