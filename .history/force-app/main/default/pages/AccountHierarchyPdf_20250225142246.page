<apex:page controller="AccountHierarchyPdfController" renderAs="pdf" showHeader="false" sidebar="false" standardStylesheets="false" applyBodyTag="false" applyHtmlTag="false">
    <html>
        <head>
            <style type="text/css">
                @page {
                    size: letter;
                    margin: 0.5in;
                    @bottom-center {
                        content: "Page " counter(page) " of " counter(pages);
                    }
                    @top-center {
                        content: "Account Ownership Hierarchy";
                    }
                }
                
                /* Ensure proper page breaks */
                .hierarchy-item {
                    page-break-inside: avoid;
                }
                
                body {
                    font-family: Arial, Helvetica, sans-serif;
                    font-size: 10pt;
                    color: #333;
                }
                
                .header {
                    text-align: center;
                    margin-bottom: 20px;
                }
                
                .title {
                    font-size: 16pt;
                    font-weight: bold;
                    margin-bottom: 5px;
                }
                
                .subtitle {
                    font-size: 10pt;
                    color: #666;
                    margin-bottom: 15px;
                }
                
                .legend {
                    margin: 10px 0;
                    padding: 5px;
                    border: 1px solid #ddd;
                    display: table;
                    width: 100%;
                }
                
                .legend-item {
                    display: inline-block;
                    margin-right: 15px;
                }
                
                .legend-color {
                    display: inline-block;
                    width: 10px;
                    height: 10px;
                    margin-right: 5px;
                    border: 1px solid #999;
                }
                
                .current-account-color {
                    background-color: #f3f2f2;
                }
                
                .certified-color {
                    background-color: #ffff99;
                }
                
                .admitted-color {
                    background-color: #a9a9a9;
                }
                
                .hierarchy-container {
                    margin-top: 15px;
                }
                
                .hierarchy-item {
                    margin-bottom: 5px;
                    padding: 5px;
                    border-left: 3px solid transparent;
                    page-break-inside: avoid;
                }
                
                /* Add visual indicators for hierarchy levels */
                .hierarchy-level-0 { margin-left: 0; }
                .hierarchy-level-1 { margin-left: 20px; border-left: 1px dotted #aaa; }
                .hierarchy-level-2 { margin-left: 40px; border-left: 1px dotted #aaa; }
                .hierarchy-level-3 { margin-left: 60px; border-left: 1px dotted #aaa; }
                .hierarchy-level-4 { margin-left: 80px; border-left: 1px dotted #aaa; }
                .hierarchy-level-5 { margin-left: 100px; border-left: 1px dotted #aaa; }
                
                .current {
                    border-left: 3px solid #0070d2;
                    background-color: #f3f2f2;
                }
                
                .certified {
                    background-color: #ffff99;
                }
                
                .admitted {
                    background-color: #a9a9a9;
                }
                
                .account-name {
                    font-weight: bold;
                }
                
                .parent-info {
                    font-size: 9pt;
                    color: #666;
                    font-style: italic;
                    margin-left: 10px;
                }
                
                .footer {
                    margin-top: 20px;
                    font-size: 8pt;
                    color: #999;
                    text-align: center;
                }
                
                .debug-info {
                    font-size: 8pt;
                    color: #999;
                    margin-top: 5px;
                    border-top: 1px solid #ddd;
                    padding-top: 5px;
                }
            </style>
        </head>
        
        <body>
            <!-- Debug Info -->
            <apex:outputPanel layout="block" styleClass="debug-info" rendered="false">
                <p>Debug: Found {!formattedNodes.size} formatted nodes</p>
                <p>Account ID: {!$CurrentPage.parameters.accountId}</p>
            </apex:outputPanel>
            
            <apex:messages />
            
            <div class="header">
                <div class="title">Account Ownership Hierarchy</div>
                <div class="subtitle">
                    Generated on <apex:outputText value="{0,date,MMMM d, yyyy 'at' h:mm a z}"><apex:param value="{!NOW()}" /></apex:outputText>
                </div>
            </div>
            
            <div class="legend">
                <div class="legend-item">
                    <span class="legend-color current-account-color"></span> Current Account
                </div>
                <div class="legend-item">
                    <span class="legend-color certified-color"></span> Certified Insurer
                </div>
                <div class="legend-item">
                    <span class="legend-color admitted-color"></span> Admitted Reinsurer
                </div>
            </div>
            
            <div class="hierarchy-container">
                <!-- Use the formatted nodes list that Visualforce can handle -->
                <apex:repeat value="{!formattedNodes}" var="node">
                    <div class="hierarchy-item hierarchy-level-{!node.level} {!node.cssClass}">
                        <div class="account-name">
                            <!-- Add visual tree connectors based on level -->
                            <apex:repeat value="{!0,1,2,3,4,5}" var="i" rendered="{!i < node.level}">
                                <span style="color: #999;">│ </span>
                            </apex:repeat>
                            <!-- Add branch indicator if not at root level -->
                            <apex:outputText value="└─ " rendered="{!node.level > 0}" style="color: #999;" />
                            {!node.name}
                        </div>
                        
                        <apex:outputPanel layout="block" styleClass="parent-info" rendered="{!NOT(ISBLANK(node.parentInfo))}">
                            Owned by: {!node.parentInfo}
                        </apex:outputPanel>
                    </div>
                </apex:repeat>
                
                <!-- Show a message if there are no nodes -->
                <apex:outputPanel layout="block" rendered="{!formattedNodes.size == 0}">
                    <p>No hierarchy data available for this account.</p>
                </apex:outputPanel>
            </div>
            
            <div class="footer">
                This document is confidential and intended for internal use only.
            </div>
        </body>
    </html>
</apex:page>