<apex:page controller="AccountHierarchyPdfController" renderAs="pdf" showHeader="false" sidebar="false" standardStylesheets="false" applyBodyTag="false" applyHtmlTag="false">
    <html>
        <head>
            <style type="text/css">
                @page {
                    size: letter;
                    margin: 0.5in;
                    @bottom-center {
                        content: "Page " counter(page) " of " counter(pages);
                    }
                    @top-center {
                        content: "Account Ownership Hierarchy";
                    }
                }
                
                body {
                    font-family: Arial, Helvetica, sans-serif;
                    font-size: 8pt;
                    color: #333;
                }
                
                .header {
                    text-align: center;
                    margin-bottom: 10px;
                }
                
                .title {
                    font-size: 14pt;
                    font-weight: bold;
                    margin-bottom: 5px;
                }
                
                .subtitle {
                    font-size: 8pt;
                    color: #666;
                    margin-bottom: 10px;
                }
                
                .legend {
                    margin: 6px 0;
                    padding: 4px;
                    border: 1px solid #ddd;
                    width: 100%;
                }
                
                .legend-item {
                    display: inline-block;
                    margin-right: 15px;
                }
                
                .legend-color {
                    display: inline-block;
                    width: 10px;
                    height: 10px;
                    margin-right: 5px;
                    border: 1px solid #999;
                }
                
                .current-account-color {
                    background-color: #f3f2f2;
                }
                
                .certified-color {
                    background-color: #ffff99;
                }
                
                .admitted-color {
                    background-color: #a9a9a9;
                }
                
                .hierarchy-container {
                    margin-top: 10px;
                    page-break-after: auto;
                }
                
                /* Rows with minimal spacing */
                .hierarchy-row {
                    page-break-inside: avoid;
                    margin-bottom: 2px;
                }
                
                /* Basic hierarchy item styling - match LWC appearance */
                .hierarchy-item {
                    padding: 2px 4px;
                }
                
                /* Level indentation that better matches the LWC */
                .level-0 { margin-left: 0; }
                .level-1 { 
                    margin-left: 20px; 
                    border-left: 1px solid #ccc;
                    padding-left: 8px;
                }
                .level-2 { 
                    margin-left: 40px;
                    border-left: 1px solid #ccc;
                    padding-left: 8px;
                }
                .level-3 { 
                    margin-left: 60px;
                    border-left: 1px solid #ccc;
                    padding-left: 8px;
                }
                .level-4 { 
                    margin-left: 80px;
                    border-left: 1px solid #ccc;
                    padding-left: 8px;
                }
                .level-5 { 
                    margin-left: 100px;
                    border-left: 1px solid #ccc;
                    padding-left: 8px;
                }
                
                /* Highlight styles */
                .current {
                    border-left: 3px solid #0070d2 !important;
                    background-color: #f3f2f2;
                }
                
                .certified {
                    background-color: #ffff99;
                }
                
                .admitted {
                    background-color: #a9a9a9;
                }
                
                .account-name {
                    font-weight: bold;
                }
                
                .parent-info {
                    font-size: 7.5pt;
                    color: #666;
                    font-style: italic;
                    display: inline-block;
                    padding-left: 5px;
                }
                
                .footer {
                    margin-top: 15px;
                    font-size: 7pt;
                    color: #999;
                    text-align: center;
                }
            </style>
        </head>
        
        <body>
            <apex:messages />
            
            <div class="header">
                <div class="title">Account Ownership Hierarchy</div>
                <div class="subtitle">
                    <apex:outputText value="For: {!accountName}" rendered="{!NOT(ISBLANK(accountName))}" />
                    <br/>
                    Generated on <apex:outputText value="{0,date,MMMM d, yyyy 'at' h:mm a z}"><apex:param value="{!NOW()}" /></apex:outputText>
                </div>
            </div>
            
            <div class="legend">
                <div class="legend-item">
                    <span class="legend-color current-account-color"></span> Current Account
                </div>
                <div class="legend-item">
                    <span class="legend-color certified-color"></span> Certified Insurer
                </div>
                <div class="legend-item">
                    <span class="legend-color admitted-color"></span> Admitted Reinsurer
                </div>
            </div>
            
            <div class="hierarchy-container">
                <!-- Use the formatted nodes list -->
                <apex:repeat value="{!formattedNodes}" var="node">
                    <div class="hierarchy-row">
                        <!-- The class level-{!node.level} provides proper indentation -->
                        <div class="hierarchy-item level-{!node.level} {!node.cssClass}">
                            <span class="account-name">{!node.name}</span>
                            
                            <!-- Parent information -->
                            <apex:outputPanel styleClass="parent-info" rendered="{!NOT(ISBLANK(node.parentInfo))}">
                                Owned by: {!node.parentInfo}
                            </apex:outputPanel>
                        </div>
                    </div>
                </apex:repeat>
                
                <!-- Show a message if there are no nodes -->
                <apex:outputPanel layout="block" rendered="{!formattedNodes.size == 0}">
                    <p>No hierarchy data available for this account.</p>
                </apex:outputPanel>
            </div>
            
            <div class="footer">
                This document is confidential and intended for internal use only.
            </div>
        </body>
    </html>
</apex:page>