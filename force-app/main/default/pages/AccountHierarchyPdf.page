<apex:page controller="AccountHierarchyPdfController" renderAs="pdf" showHeader="false" sidebar="false" standardStylesheets="false" applyBodyTag="false" applyHtmlTag="false">
    <html>
        <head>
            <style type="text/css">
                @page {
                    size: letter;
                    margin: 0.5in;
                    @bottom-center {
                        content: "Page " counter(page) " of " counter(pages);
                    }
                    @top-center {
                        content: "Account Ownership Hierarchy";
                    }
                }
                
                body {
                    font-family: Arial, Helvetica, sans-serif;
                    font-size: 10pt;
                    color: #333;
                }
                
                .header {
                    text-align: center;
                    margin-bottom: 20px;
                }
                
                .title {
                    font-size: 16pt;
                    font-weight: bold;
                    margin-bottom: 5px;
                }
                
                .subtitle {
                    font-size: 10pt;
                    color: #666;
                    margin-bottom: 15px;
                }
                
                .legend {
                    margin: 10px 0;
                    padding: 5px;
                    border: 1px solid #ddd;
                    display: table;
                    width: 100%;
                }
                
                .legend-item {
                    display: inline-block;
                    margin-right: 15px;
                }
                
                .legend-color {
                    display: inline-block;
                    width: 10px;
                    height: 10px;
                    margin-right: 5px;
                    border: 1px solid #999;
                }
                
                .current-account-color {
                    background-color: #f3f2f2;
                }
                
                .certified-color {
                    background-color: #ffff99;
                }
                
                .admitted-color {
                    background-color: #a9a9a9;
                }
                
                .hierarchy-container {
                    margin-top: 15px;
                }
                
                .hierarchy-item {
                    margin-bottom: 5px;
                    padding: 5px;
                    border-left: 3px solid transparent;
                }
                
                .current {
                    border-left: 3px solid #0070d2;
                    background-color: #f3f2f2;
                }
                
                .certified {
                    background-color: #ffff99;
                }
                
                .admitted {
                    background-color: #a9a9a9;
                }
                
                .account-name {
                    font-weight: bold;
                }
                
                .parent-info {
                    font-size: 9pt;
                    color: #666;
                    font-style: italic;
                    margin-left: 10px;
                }
                
                .footer {
                    margin-top: 20px;
                    font-size: 8pt;
                    color: #999;
                    text-align: center;
                }
            </style>
        </head>
        
        <body>
            <apex:messages />
            
            <div class="header">
                <div class="title">Account Ownership Hierarchy</div>
                <div class="subtitle">Generated on <apex:outputText value="{0,date,MMMM d, yyyy 'at' h:mm a z}"><apex:param value="{!NOW()}" /></apex:outputText></div>
            </div>
            
            <div class="legend">
                <div class="legend-item">
                    <span class="legend-color current-account-color"></span> Current Account
                </div>
                <div class="legend-item">
                    <span class="legend-color certified-color"></span> Certified Insurer
                </div>
                <div class="legend-item">
                    <span class="legend-color admitted-color"></span> Admitted Reinsurer
                </div>
            </div>
            
            <div class="hierarchy-container">
                <!-- Use apex:repeat with a safe method to access the flattened hierarchy -->
                <apex:repeat value="{!$ObjectType.Account.Fields}" var="node" rendered="false">
                    <!-- This is a dummy repeat to avoid the error, we'll use standard HTML below -->
                </apex:repeat>
                
                <!-- Use a simple text display if we can't bind to the complex object -->
                <apex:outputPanel layout="block" rendered="{!hierarchyData != null}">
                    <!-- Display a simple formatted representation of the hierarchy -->
                    Account hierarchy for: <strong>{!hierarchyData['accountName']}</strong>
                    <p>Please see the interactive version for the complete hierarchical view.</p>
                </apex:outputPanel>
                
                <apex:outputPanel layout="block" rendered="{!hierarchyData == null}">
                    <p>No hierarchy data available.</p>
                </apex:outputPanel>
            </div>
            
            <div class="footer">
                This document is confidential and intended for internal use only.
            </div>
        </body>
    </html>
</apex:page>